<html>
	<head>
		<title>@Umbraco.Field("pageName") | @Umbraco.Field("siteName", recursive: true)</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		
		<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
		<!--[if lte IE 8]><script src="/css/ie/html5shiv.js"></script><![endif]-->
		
		<script src="/scripts/jquery.min.js"></script>

		<link rel="stylesheet" href="/css/main.css" />
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
		<noscript>
			
		</noscript>
		<!--[if lte IE 8]><link rel="stylesheet" href="/css/ie/v8.css" /><![endif]-->
	</head>
<body class="homepage">
	<div id="page-wrapper">
		<!-- Header -->
		<div id="header-wrapper">
			<div id="header">
				<!-- Logo -->
				<h1><a href="/">@Umbraco.Field("siteName", recursive: true)</a></h1>
	
				<!-- Nav -->
				@{ Html.RenderPartial("umbTopNavigation"); }
	
				<!-- Banner -->
				@{ Html.RenderPartial("umbBanner"); }
	
				@*
					The template is a single page website, but we still want to be able to add block of content in a 
					variable way in there. This is being done by adding children under the homepage and looping through
					them and then rendering them with a specific partial view. In this foreach loop we dynamically find
					the appropriate parial based on the alias of the document type for the child.
					So if the child node has a document type with the alias "umbTextPage", we would Render the partial
					"umbTextPage" for that child node. This way we can easily add multiple "umbTextPage" children, or
					multiple "umbFeature" children, and so on.
				*@
				@*{ Html.RenderPartial("umbFeatures"); }*@
				@*<section id="intro" class="container">
					<div class="row">
						@foreach (var child in Model.Content.Children)
						{
							Html.RenderPartial(child.DocumentTypeAlias, child);
						}
					</div>
				</section>*@
			</div>
		</div>
		
		<!-- Main -->
		<div id="main-wrapper">
			<div class="container">
				<div class="row">
					<div class="12u">
	
					<!-- Portfolio -->
					@*{ Html.RenderPartial("umbPortfolioOverview"); }*@
					@*RenderBody()*@
					</div>
				</div>
				
			</div>
		</div>
			
		<!-- Footer -->			
		<div id="footer-wrapper">
			<section id="footer" class="container">
				<div class="row">
					<div class="4u 12u(mobile)">
								
					</div>
					<div class="4u 12u(mobile)">
						<section>
							<header>
								<h2>Also find me on</h2>
							</header>
							
								@*{ Html.RenderPartial("umbSocial"); }*@

									<ul class="contact">
										<li>
											<h3>Address</h3>
											<p>
												Untitled Incorporated<br>
												1234 Somewhere Road Suite<br>
												Nashville, TN 00000-0000
											</p>
										</li>
										<li>
											<h3>Mail</h3>
											<p><a href="mailto:abright2012@gmail.com?Subject=Contact">abright2012@gmail.com</a></p>
										</li>
										<li>
											<h3>Phone</h3>
											<p>(+44) 07702709902</p>
										</li>
									</ul>
								</section>
							</div>
						</div>
				<div class="row">
					<div class="12u">

						<!-- Copyright -->
						<div id="copyright">
							<ul class="links">
								<li>&copy; @DateTime.Now.Year @Umbraco.Field("copyright", recursive: true).</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li><li>Demo Images: <a href="http://facebook.com/DreametryDoodle">Dreametry Doodle</a></li>
							</ul>
						</div>

					</div>
				</div>
			</section>
		</div>
	</div>
    <script src="/js/jquery.min.js"></script>
	<script src="/js/jquery.dropotron.min.js"></script>
</body>

</html>